<% unless @post.present? %>
	Belum ada posting
<% end %>
<% meta :title => @post.title,
 		:description => @post.description,
 		:keywords => @post.keyword   
%>
<div class="col-md-8">
	<article>
		<h1><%= link_to @post.title, post_path(@post) %></h1>
		<div class="row">
			<div class="col-sm-6 col-md-6">
				<span class="glyphicon glyphicon-folder-open"></span>Tags :
				<% @post.tags.any? %>
  				<% @post.tags.each do |tag| %>
  					<%= link_to tag.name, tags_url(:tag => tag.name) %>
					<% end %>
			</div>
			<div class="col-sm-6 col-md-6">
				<span class="glyphicon glyphicon-pencil"></span> <a href="singlepost.html#comments"><%= @post.user.profile.first_name %></a>		          		&nbsp;&nbsp;<span class="glyphicon glyphicon-time"></span> <%= @post.created_at.strftime("%b %d, %Y") %>
			</div>
		</div>
		<hr>
		<p class="lead"><%= @post.body.html_safe %></p>
	</article>
	<%= render 'partials/comment'%>
</div>
<%= render :partial => 'partials/sidebar' %>