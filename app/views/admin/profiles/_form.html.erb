<%= render 'partials/errors', object: @profile %>
<%= form_for ([:admin, @profile]), :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :first_name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :last_name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text_area form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :avatar, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= image_tag(@profile.avatar_url :thumb) if @profile.avatar? %>
      <%= f.file_field :avatar, :class => 'file_field form-control' %>
       <%= f.hidden_field :avatar_cache %>
    </div>
  </div>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit "Save", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_articles_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
