<% unless @post.blank? %>
  tidak ada data
<% end %>
<div class="panel panel-danger">
  <div class="panel-heading">
    Newest Post
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Published</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td>
              <%- if post.published = 1 %>
                <span class="glyphicon glyphicon-check"></span>
              <%- else %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
