<div class="container">
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="text-center">Add User</h1>
      </div>
      <div class="panel-body">
     <%= devise_error_messages! %>
    <h1 class="text-center login-title">Change Password</h1>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class: 'form-signin'}) do |f| %>
    <div class="form-group">
      <label for="current_password">Current Password</label>
      <%= f.password_field :password, :class => 'form-control', :placeholder => 'Current password', autocomplete: 'off' %>
    </div>
    <div class="form-group">
      <label for="email">New password</label>
      <%= f.password_field :password, :class => 'form-control', :placeholder => 'New password', autocomplete: "off" %>
    </div>
    <div class="form-group">
      <label for="email">Password confirmation</label>
      <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Password confirmation',  autocomplete: "off" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update", :class => 'btn btn-primary btn-md btn-block' %>
    </div>
  <% end %>
  <%= link_to "Cancel", :back, :class => 'btn btn-primary btn-md btn-block' %>
  </div>
</div>
</div>
</div>

